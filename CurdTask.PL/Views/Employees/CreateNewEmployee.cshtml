

@model EmployeeViewModel
@inject ICitiesRepository _citeisReopsitory;

@{
    ViewData["Title"] = "Emolpyee Details";
    var citiesList = new SelectList( await _citeisReopsitory.GetCities(),nameof(City.CityId),nameof(City.CityName));
}



<h1>New Employee </h1>
<form method="post" class="form form">

    <div class="container mt-4">

        <div class="form-group">
            <label asp-for="EmployeeId" class="col-form-label"></label>
            <input asp-for="EmployeeId" class="form-control" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label asp-for="Salary" class="col-form-label"></label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="CityId" class="col-form-label"></label>
            <select asp-for="CityId" class="form-select" asp-items="@citiesList">
                <option></option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="SubCityId" class="col-form-label"></label>
            <input asp-for="SubCityId"  style="display:none;"> 
             <select id="subCityList" class="form-select">
                <option></option>
            </select>
        </div>

        <div class="form-group">
            <label  asp-for="VillageId" class="col-form-label"></label>
            <input asp-for="VillageId" style="display:none;"> 

             <select id="villageList" class="form-select"  >
                <option></option>
            </select>
        </div>


        <div class="mt-3">
            <a asp-controller="Employees" asp-action="Index" class="btn btn-primary">Back To List</a>|
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

@section  ClintSideValidation{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/cascadingdropdownlist.js"></script>
}
